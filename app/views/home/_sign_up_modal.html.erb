<div class="modal fade" id="sign_up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

<div class="modal-header">
Sign Up

<button class="close" data-dismiss="modal">x</button>



</div>

<div class="modal-body">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class =>"hello") do |f| %>

<%= devise_error_messages! %>
<div><%= f.label :username %><br />

<%= f.text_field :username, :autofocus => true %></div>

<div><%= f.label :name %><br />

<%= f.text_field :name, :autofocus => false %></div>

<div><%= f.label :email %><br />

<%= f.email_field :email, :autofocus => false %></div>

<div><%= f.label :password %><br />

<%= f.password_field :password %></div>

<div><%= f.label :password_confirmation %><br />

<%= f.password_field :password_confirmation %></div>

</div>

<div class="modal-footer">

<p><div><%= f.submit "Sign Up", :class => 'btn btn-small btn-success' %></div></p>

<p><a href="#" class="btn btn-small" data-dismiss="modal">Close</a></p>

</div>
<% end %>


</div>
</div>
</div>
</div>