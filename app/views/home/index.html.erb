<% if current_user %>

<script id="post_view" type="text/x-handlebars-template">
  {{#each posts}}
    <div class="post">
      <p>{{ message }}</p>
      <p>{{ item/name }}</p>
      <p>{{ item/itemtype/name }}</p>
      <p><a href="{{ item/url }}">{{ item/url }}</a></p>
    </div>
  {{/each}}
</script>

<script id="post_form_view" type="text/x-handlebars-template">
  <input type="text" placeholder="Message" id="post_message">
  <select id="item_itemtype">
  <% @itemtypes.each do |type| %>
  <option value="<%= type.id %>"><%= type.name %></option>
  <% end %>
  </select>
  <input type="text" placeholder="Name" id="item_name">
  <input type="text" placeholder="URL" id="item_url">
  <button id="post_submit_button">Submit</button>
</script>

<%= current_user.name %>
<h1>Welcome</h1>

<%= @posts %>

<% end %>

